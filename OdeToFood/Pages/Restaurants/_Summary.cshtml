@using OdeToFood.Core
@model Restaurant

<div class="card">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="card-footer">
        <a class="btn btn-primary"
           asp-page="./Detail"
           asp-route-restaurantId="@Model.Id">
            <span class="material-icons">
                loupe
            </span>
        </a>
        <a class="btn btn-primary"
           asp-page="./Edit"
           asp-route-restaurantId="@Model.Id">
            <span class="material-icons">
                history_edu
            </span>
        </a>
        <a class="btn btn-primary"
           asp-page="./Delete"
           asp-route-restaurantId="@Model.Id">
            <span class="material-icons">
                delete_sweep
            </span>
        </a>
    </div>
</div>