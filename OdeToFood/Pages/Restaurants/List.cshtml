@page
@model Restaurants.ListModel
@{
    ViewData["Title"] = "List of Restaurants";
}

<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm"/>
            <span class="input-group-append">
                <button class="btn btn-secondary">Search</button>
            </span>
        </div>
    </div>
</form>

<table class="table">
    @foreach (var restaurant in Model.Restaurants)
    {
    <tr>
        <td>@restaurant.Name</td>
        <td>@restaurant.Location</td>
        <td>@restaurant.Cuisine</td>
        <td>
            <a class="btn btn-secondary"
               asp-page="/Restaurants/Detail"
               asp-route-restaurantId="@restaurant.Id">Details</a>
        </td>
        <td>
            <a class="btn btn-secondary"
               asp-page="/Restaurants/Edit"
               asp-route-restaurantId="@restaurant.Id">Edit</a>
        </td>
    </tr>
    }
</table>

<a asp-page=".\Edit" class="btn btn-primary">Add New</a>